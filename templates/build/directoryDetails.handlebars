<div data-source-entry-id="{{dataSourceEntryId}}">
    <div class="directory-detail-title {{#if has_thumbnail}}has-thumbnail{{/if}}">
        {{#if has_thumbnail}}<span class="thumbnail"><span class="helper"></span><span class="img-wrapper {{thumbShape}}" {{#if thumbnail}} style="background-image: url('{{thumbnail}}');" {{/if}}></span></span>
        {{/if}}{{title}}</div>
        {{#if link_to_chat}}
        <div class="button-tray">
          <div class="btn btn-default chat-entry" data-entry-id="{{dataSourceEntryId}}"><i class="fa fa-comments" aria-hidden="true"></i> Send message</div>
        </div>
        {{/if}}
    {{#each fields}}
      <div class="directory-detail-field" data-field="{{label}}">
        <div class="directory-detail-label">{{label}}</div>
        <div class="directory-detail-value">{{{value}}}</div>
      </div>
    {{/each}}
</div>
